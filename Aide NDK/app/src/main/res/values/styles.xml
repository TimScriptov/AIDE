<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
    </style>
	<style name="NotificationText">
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>
	<style name="NotificationTitle">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">?android:textColorPrimary</item>
	</style>
	<style name="ButtonBackground">
		<item name="android:background">@android:color/background_dark</item>
	</style>
	<style name="NotificationTextShadow" parent="@style/NotificationText">
		<item name="android:textColor">?android:textColorPrimary</item>
		<item name="android:shadowColor">@android:color/background_dark</item>
		<item name="android:shadowDx">1.0</item>
		<item name="android:shadowDy">1.0</item>
		<item name="android:shadowRadius">1.0</item>
	</style>
	<style name="NotificationTextSecondary" parent="@style/NotificationText">
		<item name="android:textSize">12.0sp</item>
	</style>
</resources>
